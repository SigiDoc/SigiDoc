                    <term xml:lang="fr">Théotokos</term>
                    <term xml:lang="it">Theotokos</term>
                </item>
                <item xml:id="metroparthenos">
                    <term xml:lang="grc">Μητροπάρθενος</term>
                    <term xml:lang="en">Virgin mother</term>
                    <term xml:lang="fr">Vièrge mère</term>
                    <term xml:lang="it">Vergine madre</term>
                </item>
                <item xml:id="meter-theou">
                    <term xml:lang="grc">Μήτηρ Θεοῦ</term>
                    <term xml:lang="en">Mother of God</term>
                    <term xml:lang="fr">Mère de Dieu</term>
                    <term xml:lang="it">Madre di Dio</term>
                </item>
            </list>

