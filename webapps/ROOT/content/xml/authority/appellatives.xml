            <!--*** christTerms ***-->

            <list type="christTerms">
                <item xml:id="christ">
                    <term xml:lang="grc">Ἰησοῦς Χριστός</term>
                    <term xml:lang="en">Jesus Christ</term>
                    <term xml:lang="fr">Jésus Christ</term>
                    <term xml:lang="it">Gesù Cristo</term>
                </item>
                <item xml:id="lord">
                    <term xml:lang="grc">Κύριος</term>
                    <term xml:lang="en">Lord</term>
                    <term xml:lang="fr">Seigneur</term>
                    <term xml:lang="it">Signore</term>
                </item>
                <item xml:id="savior">
                    <term xml:lang="grc">Σωτήρ</term>
                    <term xml:lang="en">Savior</term>
                    <term xml:lang="fr">Sauveur</term>
                    <term xml:lang="it">Salvatore</term>
                </item>
            </list>

            <!--*** marianTerms ***-->

            <list type="marianTerms">
